
var MenuExample = React.createClass({

    getInitialState: function(){
        return { focused: 0 };
    },

    clicked: function(index){       // The click handler will update the state with
                                    // the index of the focused menu entry

        this.setState({focused: index});
    },

    render: function() {

        // read the items property, passed when the component was created

        var self = this;

        // The map method loops over the array of menu entries,
        // return a new array with elements.

        return (
            <div>
                <ul>{ this.props.items.map(function(m, index){
        
                    var style = '';
        
                    if(self.state.focused == index){
                        style = 'focused';
                    }
        
                    // Notice the use of the bind() method. It makes the
                    // index available to the clicked function:
        
                    return <li className={style} onClick={self.clicked.bind(self, index)}>{m}</li>;
        
                }) }
                        
                </ul>
                
                <p>Selected: {this.props.items[this.state.focused]}</p>
            </div>
        );

    }
});

// Render the menu component on the page pass an array with menu options

ReactDOM.render(<MenuExample items={ ['Home', 'Services', 'About', 'Contact us'] } />, document.getElementById('container'));
